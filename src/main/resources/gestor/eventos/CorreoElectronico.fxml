<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="gestor.eventos.CorreoElectronicoController">
    <VBox AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
    

        <Label text="Para:" />
        <TextField fx:id="campoPara" />

        <Label text="Asunto:" />
        <TextField fx:id="campoAsunto" />

        <Label text="Mensaje:" />
        <TextArea fx:id="campoMensaje" />

        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#enviarCorreo" text="Enviar" />
        </HBox>
    </VBox>
</AnchorPane>
